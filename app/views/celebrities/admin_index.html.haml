%h2 Celebrities
.col-12-lg
  .admin_index
    - @celebrities.each do |c|
      .row
        %p Celebrity id #{c.id}
        = simple_form_for c,  :url => celebrities_admin_update_path, :method => :post,   :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-horizontal' } }  do |f|
          = f.input_field :first_name
          = f.input_field :last_name
          = f.input_field :photo_url, as: :string
          = image_tag "#{c.photo_url}",  size: "100x100"
          = f.input_field :active, inline_label: true, label: false
          = f.hidden_field :id, :input_html => { :value  => c.id}
          = f.submit "Update", class: 'btn btn-primary'
        %hr
